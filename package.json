{
  "name": "@toichubek/pg-ddl-extractor",
  "version": "1.0.7",
  "description": "Extract PostgreSQL DDL into organized folder structure for Git versioning with diff and migration tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pg-ddl-extract": "dist/cli/extract.js",
    "pg-ddl-diff": "dist/cli/diff.js",
    "pg-ddl-migrate": "dist/cli/migrate.js",
    "pg-ddl-lint": "dist/cli/lint.js",
    "pg-ddl-watch": "dist/cli/watch.js",
    "pg-ddl-docs": "dist/cli/docs.js",
    "pg-ddl-stats": "dist/cli/stats.js",
    "pg-ddl-search": "dist/cli/search.js",
    "pg-ddl-deps": "dist/cli/deps.js",
    "pg-ddl-validate": "dist/cli/validate.js",
    "pg-ddl-changelog": "dist/cli/changelog.js",
    "pg-ddl-snapshot-diff": "dist/cli/snapshot-diff.js",
    "pg-ddl-size": "dist/cli/size-report.js",
    "pg-ddl-init": "dist/cli/init.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli/*.js",
    "prepublishOnly": "npm run build",
    "extract:dev": "ts-node src/extract.ts --env dev",
    "extract:prod": "ts-node src/extract.ts --env prod",
    "extract": "ts-node src/extract.ts",
    "diff": "ts-node src/diff.ts",
    "diff:report": "ts-node src/diff.ts --report",
    "migrate": "ts-node src/migrate.ts",
    "migrate:rollback": "ts-node src/migrate.ts --with-rollback",
    "migrate:dry-run": "ts-node src/migrate.ts --dry-run",
    "migrate:interactive": "ts-node src/migrate.ts --interactive",
    "schema:lint": "ts-node src/lint.ts",
    "schema:lint:dev": "ts-node src/lint.ts --env dev",
    "schema:lint:prod": "ts-node src/lint.ts --env prod",
    "watch": "ts-node src/watch.ts",
    "watch:dev": "ts-node src/watch.ts --env dev",
    "watch:prod": "ts-node src/watch.ts --env prod",
    "docs": "ts-node src/docs.ts",
    "docs:dev": "ts-node src/docs.ts --env dev",
    "docs:diagram": "ts-node src/docs.ts --env dev --diagram",
    "stats": "ts-node src/stats.ts",
    "stats:dev": "ts-node src/stats.ts --env dev",
    "stats:prod": "ts-node src/stats.ts --env prod",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "postgresql",
    "postgres",
    "ddl",
    "schema",
    "extract",
    "migration",
    "database",
    "diff",
    "version-control",
    "git"
  ],
  "author": "toichubek",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toichubek/pg-ddl-extractor.git",
    "directory": "."
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "dotenv": "^17.2.4",
    "pg": "^8.13.0"
  },
  "optionalDependencies": {
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/commander": "^2.12.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "@types/ssh2": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.54.0"
  }
}
